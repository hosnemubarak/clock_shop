# Clock Shop Environment Configuration
# Copy this file to .env and update values as needed

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Django secret key - MUST be changed in production
# Generate a new key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-clock-shop-secret-key-change-in-production

# Debug mode - Set to False in production
DEBUG=True

# Allowed hosts - comma-separated list
# Example: localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=*

# CSRF Trusted Origins - comma-separated list of origins
# Include the protocol and port (use * for wildcard ports in development)
# Development: http://127.0.0.1:*,http://localhost:*
# Production: https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:*,http://localhost:*

# ===========================================
# BUSINESS SETTINGS
# ===========================================

# Shop name displayed in the application
SHOP_NAME=Clock Shop

# Currency symbol for prices
CURRENCY_SYMBOL=à§³

# Low stock threshold - products below this quantity trigger alerts
LOW_STOCK_THRESHOLD=5
