# =============================================================================
# Clock Shop - Environment Configuration
# =============================================================================
# Copy this file to .env and update values as needed
#
# DEPLOYMENT MODES:
#   1. Local Development: Uses SQLite (default, no database config needed)
#   2. Docker/Production: Uses PostgreSQL (set DATABASE_URL or DB_* variables)
# =============================================================================

# =============================================================================
# SECURITY SETTINGS (Required for Production)
# =============================================================================

# Django secret key - MUST be changed in production!
# Generate: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production

# Debug mode - MUST be False in production
DEBUG=True

# Allowed hosts - comma-separated (e.g., yourdomain.com,www.yourdomain.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF Trusted Origins - comma-separated with protocol
# Development: http://127.0.0.1:8090,http://localhost:8090
# Production: https://yourdomain.com
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8090,http://localhost:8090

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# Option 1: DATABASE_URL (recommended for Docker/production)
# Format: postgres://USER:PASSWORD@HOST:PORT/DBNAME
# DATABASE_URL=postgres://clock_shop:clock_shop_password@db:5432/clock_shop

# Option 2: Individual variables (alternative to DATABASE_URL)
# DB_ENGINE=postgresql
# DB_NAME=clock_shop
# DB_USER=clock_shop
# DB_PASSWORD=clock_shop_password
# DB_HOST=db
# DB_PORT=5432

# Option 3: Leave all DB settings commented = SQLite (local development default)

# =============================================================================
# BUSINESS SETTINGS
# =============================================================================

# Shop/Business name displayed in the application
SHOP_NAME=Clock Shop

# Currency symbol for prices (default: BDT)
CURRENCY_SYMBOL=à§³

# Low stock alert threshold
LOW_STOCK_THRESHOLD=5

# =============================================================================
# DOCKER SETTINGS (Only for docker-compose)
# =============================================================================

# PostgreSQL settings for Docker
POSTGRES_DB=clock_shop
POSTGRES_USER=clock_shop
POSTGRES_PASSWORD=clock_shop_password

# Application port (default 8090 for Docker)
APP_PORT=8090
